<%- include partials/head.ejs %>
<%- include partials/navbar.ejs %>
<link rel="stylesheet" type="text/css" href="../../styles/compare.css">
<script type="text/javascript" src="https://d3js.org/d3.v4.min.js"></script>
<script type="text/javascript" src="../../styles/js/popGraph.js"></script>

<script type="text/javascript">
  var cities = <%- JSON.stringify(cities) %>;
</script>

<div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1>City Comparison Tool</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <% if(cities.length === 0) { %>
          <p>No data: please mark some cities as favorites or pin them for comparison.</p>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-sm table-striped table-bordered">
              <thead>
                <tr>
                  <th scope="col">City</th>
                  <th scope="col">Total population</th>
                  <th scope="col">Population UK (%)</th>
                  <th scope="col">Population non-UK (%)</th>
                  <th scope="col">CO2 emissions per capita (tons)</th>
                  <th scope="col">Number of public libraries</th>
                  <th scope="col">Ultra-fast broadband (%)</th>
                  <th scope="col">Employment rate (%)</th>
                  <th scope="col">Avg. weekly earnings (£)</th>
                  <th scope="col">Private / Public sector employment ratio</th>
                  <th scope="col">Housing affordability ratio</th>
                  <th scope="col">Mean house price (£)</th>
                </tr>
              </thead>
              <tbody>
                <% cities.forEach(function(city){ %>
                  <tr>
                    <th scope="row"><%= city.city %></th>
                    <td><%= city.Population_2016 %></td>
                    <td><%= city.Population_UK %></td>
                    <td><%= city.Population_Non_UK %></td>
                    <td><%= city.CO2_Emissions_per_Capita_2015_tons %></td>
                    <td><%= city.Public_libraries %></td>
                    <td><%= city.Ultrafast_Broadband_2017 %></td>
                    <td><%= city.Employment_Rate_2017 %></td>
                    <td><%= city.Average_Weekly_Workplace_Earnings_2017 %></td>
                    <td><%= city.Ratio_of_Private_to_Public_Sector_Employment_2016 %></td>
                    <td><%= city.Housing_Affordability_Ratio_2017 %></td>
                    <td><%= city.Mean_house_price_2017 %></td>
                  </tr>
                <%  }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <h2>Population &amp; CO2 emissions per capita</h2>
        <div id="populationSvg"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h2>Population UK &amp; non-UK (%)</h2>
        <!-- stacked bars -->
        <div id="inmSvg"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h2>Employment rate &amp; Avg. weekly earnings</h2>
        <!-- bars dual scale -->
        <div id="employmentSvg"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h2>Unemployment &amp; Private/public employment ratio</h2>
        <!-- stacked bars -->
        <div id="unemploymentSvg"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h2>Housing affordability ratio &amp; mean house price</h2>
        <!-- bars dual scale -->
        <div id="housingSvg"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h2>Ultra-fast broadband</h2>
        <!-- bars -->
        <div id="broadbandSvg"></div>
      </div>
    </div>
</div>
<script type="text/javascript">
  // calls to d3 functions here
  renderPop(cities);
</script>
